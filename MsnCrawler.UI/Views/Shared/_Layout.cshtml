<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/images/icon.png">
    <link rel="icon" type="image/png" href="~/images/icon.png">
    <meta name="viewport" content="width=device-width" />
    <title>Msn Crawler</title>
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css" />
    <!-- CSS Files -->
    <environment include="Development">
        <link href="~/css/material-dashboard.min.css" rel="stylesheet" />
    </environment>
    <script src="~/js/core/jquery.min.js" type="text/javascript"></script>
    <script src="~/js/plugins/bootstrap-notify.js" type="text/javascript"></script>

    <style>
        .form-control,
        .is-focused .form-control {
            background-image: linear-gradient(to top, #26c6da 2px, rgba(156, 39, 176, 0) 2px), linear-gradient(to top, #d2d2d2 1px, rgba(210, 210, 210, 0) 1px);
        }
    </style>

</head>
<body>
    <div class="wrapper">
        <div class="sidebar" data-color="azure" data-background-color="white">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"

                Tip 2: you can also add an image using data-image tag
            -->

            <div class="logo">
                <a href="/" class="simple-text logo-normal">
                 <i class="material-icons">location_searching</i>  Msn Crawler
                </a>
            </div>

            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item @ViewBag.HomeActive  ">
                        <a class="nav-link" href="/">
                            <i class="material-icons">dashboard</i>
                            <p>Anasayfa</p>
                        </a>
                    </li>
                  
                    <!-- your sidebar here -->
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <a class="navbar-brand" href="/">  <i class="material-icons">router</i>    @ViewBag.Title</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                      
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    <!-- your content here -->
                    @RenderBody()

                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <nav class="float-left">
                        <ul>
                            <li>
                                <a href="/">
                                    Msn Crawler
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="copyright float-right">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script> <span data-translate="ofyear"> </span>
                        <a href="https://github.com/emrebalci94" target="_blank">Emre Balcı</a><span> tarafından yapıldı. </span>
                    </div>
                    <!-- your footer here -->
                </div>
            </footer>
        </div>
    </div>
    <!--Core Js Files-->
    <script src="~/js/core/jquery.min.js" type="text/javascript"></script>

    <script src="~/js/core/popper.min.js" type="text/javascript"></script>
    <script src="~/js/core/bootstrap-material-design.min.js" type="text/javascript"></script>
    <script src="~/js/plugins/perfect-scrollbar.jquery.min.js" type="text/javascript"></script>
    <!--Notification Plugin-->
    <script src="~/js/plugins/bootstrap-notify.js" type="text/javascript"></script>
    <!--Template JS File-->
    <script src="~/js/material-dashboard.min.js" type="text/javascript"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@7.28.5/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.28.5/dist/sweetalert2.all.min.js"></script>
</body>
</html>
